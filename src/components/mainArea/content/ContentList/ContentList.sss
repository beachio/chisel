.content-wrapper
  width: 100%
  display: flex
  flex-flow: row nowrap
  justify-content: space-between

.inputs-wrapper
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center

  width: 400px
  margin: 15px 0 0 auto

  .dropdown-wrapper
    flex: 0 0 27%

  .input-wrapper
    flex: 0 0 70%

.search
  margin-bottom: 15px

.list-wrapper
  flex: 1
  margin-top: -75px

.list
  display: flex
  flex-flow: column nowrap
  width: 100%
  border-radius: 20px

  &-no-items
    padding: 16px

    font-size: 14px
    color: #2C2C30

  &-item
    display: flex
    flex-flow: row nowrap
    align-items: center
    position: relative

    background: #fff
    padding: 16px

    z-index: 5

    &:nth-child(2n)
      background: #FCFCFC
  
    &:hover
      .hidden-controls
        opacity: 0.999

    .colorLabel
      margin-right: 10px
      height: 20px
      width: 20px
      border-radius: 100%

    .type
      display: flex
      flex-flow: row nowrap
      flex: 1 1 200px
      max-width: 460px

    .name,
    .description,
    .updated
      font-size: 14px
      color: #2C2C30
      letter-spacing: 0.5px
      text-align: left

    .name
      max-width: 300px
      width: 100%
      
      &.untitled
        font-weight: 400

    .description
      max-width: 160px
      width: 100%
      letter-spacing: 0.46px

    .updated
      flex: 0 1 auto

.items
  background: #ffffff
  border-radius: 20px
  box-shadow: 0 1px 0 0 rgba(0,0,0,0.05), 0 1px 10px 0 rgba(0,0,0,0.05)
  overflow: hidden

  margin-left: 40px

.filters
  flex: 0 0 16%

  &-item
    margin-top: 15px
    text-align: left

    &:first-child
      margin-top: 0

  &-title
    font-size: 16px
    color: #2C2C30
    letter-spacing: 0.5px

  &-type
    margin-top: 15px

    font-size: 14px
    color: #297AD6
    letter-spacing: 0.5px

    display: flex
    flex-flow: row nowrap
    justify-content: space-between
    align-items: center

    cursor: pointer

    transition: color 0.2s ease
    will-change: color

    &:hover
      .eye
        opacity: 1

  &-type.filters-typeHidden
    color: #a7a7a7

  .eye
    width: 17px
    height: 15px
    opacity: 0
    transition: opacity 0.2s ease
    will-change: opacity

    &-active
      opacity: 1
      color: #297AD6

  &-status
    margin-top: 27px

.controls
  display: flex
  flex-flow: row nowrap
  align-items: center
  margin-left: auto

.remove
  margin-left: 20px

  .cross
    height: 18px
    width: 18px

.control-icon
  width: 18px
  height: 18px
  cursor: pointer

.bottom-inputs
  padding-left: 40px
  width: 100%
  
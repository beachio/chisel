.content
  display: flex
  flex-flow: column nowrap
  align-items: flex-start
  padding: 0 35px

  width: 100%

.field
  margin-top: 20px
  width: 100%
  text-align: left

  display: flex
  flex-flow: column nowrap

  transition: color 0.2s ease
  will-change: color

  z-index: 3

  &-title,
  &-error
    font-weight: 600
    font-size: 13px
    color: #CCCCCC
    letter-spacing: 0.5px
    line-height: 30px
    position: relative

    transition: color 0.2s ease
    will-change: color

  &-error
    color: #DD5555

  &:hover > .field-title
    color: #5DAD47

  .link
    position: absolute
    right: 3px
    bottom: 4px
    opacity: .7
    cursor: pointer

    &-icon svg
      height: 12px
      width: 12px

    &:hover
      opacity: 1


  .title-input
    font-size: 18px
    letter-spacing: 0.69px
    color: #666666
    line-height: 30px
    width: 100%
    border: none
    outline: none
    margin-top: -6px
    padding-bottom: 5px
    border-bottom: 1px solid #CCCCCC

    transition: border-color 0.2s ease
    will-change: border-color
    order: 2

    &:focus
      border-color: #5CA6DC

    &:focus + .field-title
      color: #5DAD47

  .image
    height: 106px
    width: 217px
    background: #D8D8D8 center center no-repeat / contain

  .fileUpload
    width: 100%
    height: 100%
    opacity: 0

    &-input
      width: 100%
      height: 100%
      cursor: pointer

  .textarea
    resize: none
    height: 237px
    width: 100%
    border: 1px solid #F4F4F4
    outline: none

    font-weight: 600
    font-size: 13px
    color: #666666
    letter-spacing: 0.5px
    padding: 13px 15px

  .radio
    display: flex
    flex-flow: row nowrap
    align-items: center

  .switch-wrapper
    margin-top: 6px

  .input
    background: #FFFFFF
    border: 1px solid #CCCCCC
    box-shadow: inset 0px 1px 2px 0px rgba(0,0,0,0.10)
    border-radius: 2px
    line-height: 34px
    padding: 0 9px
    margin-top: 10px
    outline: none

    &:first-child
      margin-top: 0px

    &-wrapper
      display: flex
      flex-flow: column nowrap

.status
  color: #6f6f6f

  .Draft
    color: #5CA6DC

  .Published
    color: #5DAD47

  .Updated
    color: #DD5555

  .Archived
    color: #b9b9b9


.buttons-wrapper
  margin-top: 50px
  display: flex
  flex-flow: row nowrap
  z-index: 3

  .button-publish
    margin-right: 15px


.media,
.reference
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-items: flex-start

  &-buttons
    flex: 0 0 100%
    display: flex
    flex-flow: row nowrap

    margin-bottom: 20px

  &-button
    background: rgba(255,255,255,0.80)
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.10)
    border-radius: 10px
    border: 2px solid #DDDDDD

    font-size: 24px
    color: #666666
    letter-spacing: 0.54px

    transition: border-color 0.2s ease
    will-change: border-color

    cursor: pointer
    position: relative

    &:hover
      border-color: #258BF8

    &-disabled
      cursor: auto
      color: #b2b2b2

      &:hover
        border-color: #DDDDDD

  &-upload
    padding: 9px 36px 10px
    margin-right: 20px

  &-insert
    padding: 9px 20px 10px 20px

  &-new
    padding: 9px 30px 10px 20px
    margin-right: 20px

  &-hidden
    width: 100%
    height: 100%
    opacity: 0
    position: absolute
    left: 0
    top: 0
    cursor: pointer

  &-item
    position: relative
    overflow: hidden

    display: flex
    flex-flow: column nowrap
    flex: 0 0 49%
    margin-bottom: 15px

    cursor: pointer

    background: rgba(255,255,255,0.80)
    border: 2px solid #DDDDDD
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.10)
    border-radius: 10px

    transition: border-color 0.2s ease
    will-change: border-color

    &:hover
      border-color: #6D9EE1

  &-title
    font-size: 24px
    color: #666666
    letter-spacing: 0.54px
    padding: 9px 10px 10px 20px

  .untitled
    color: #a7a7a7

  .reference-item
    flex: 0 0 80%


  &-header,
  .reference-item
    position: relative

    input
      width: 100%
      outline: none
      border: none
      background: transparent
      font-size: 24px
      color: #666666
      letter-spacing: 0.54px
      padding: 11px 38px

  &-cross
    position: absolute
    right: 14px
    top: 11px
    cursor: pointer
    opacity: .6

    &:hover
      opacity: 1

    svg
      width: 24px
      height: 24px


.data-time-wrapper
  display: flex
  flex-flow: row nowrap !important

.date
  margin-right: 30px

.date input,
.time input
  height: auto
  width: auto
  font-family: 'Open Sans', sans-serif
  font-size: 18px
  color: #666666
  letter-spacing: 0.69px
  line-height: 30px
  padding: 10px 0 5px 0
  border: none
  border-radius: 0
  border-bottom: 1px solid #5CA6DC
  cursor: pointer

.data-time-disabled
  .date input,
  .time input
    color: #999999
    border-bottom: 1px solid #BBBBBB

.url
  &-span
    position: absolute
    font-size: 18px
    color: #9B9B9B
    line-height: 30px
    letter-spacing: 0.69px

  input
    //padding-left: 57px

.wysiwig
  border-bottom: 1px dashed #CCCCCC
  max-height: 250px
  overflow: scroll

  &:focus
    border-bottom: 1px #5CA6DC solid

.markdown
  height: 250px



.list-item
  display: flex
  align-items: center

  &-input
    cursor: auto

  &-plus,
  &-minus
    margin-left: 10px
    font-size: 26px
    color: #999999
    cursor: pointer

  &-plus
    padding-top: 4px

.list-plus
  font-size: 13px
  color: #999999
  cursor: pointer

.rating,
.switch
  display: flex
  align-items: center


.clear
  margin-left: 40px
  font-size: 13px
  color: #999999
  cursor: pointer

.clear:hover
  color: #5DAD47

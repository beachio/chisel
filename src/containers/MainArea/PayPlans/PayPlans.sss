.PlanControl
  cursor: pointer
  margin-bottom: 5px

  .plan-content
    width: 100%
    border: 2px solid #6D9EE1
    border-radius: 5px
    display: flex
    align-items: center
    padding: 15px

    .text
      flex-grow: 1
      text-align: center

      .title
        font-size: 18px
        font-weight: 600
        color: #666666
        margin-bottom: 20px

      .description
        font-size: 13px
        color: #666666
        margin-bottom: 10px


  .current
    border-color: #dddddd

  .change
    font-size: 15px
    font-weight: 600
    color: #666666
    margin-top: 30px
    margin-bottom: 10px

  .buttons-wrapper
    width: 100%
    margin-top: 30px
    display: flex
    justify-content: center


.content
  width: 100%

  .label
    padding-bottom: 20px
    padding-left: 2px
    color: #A4A4AE
    font-size: 18px

    span
      color: #2C2C30

  .plans
    display: flex
    justify-content: space-around
    padding-top: 42px
    padding-left: 40px
    padding-right: 40px

  .buttons-wrapper
    width: 100%
    margin-top: 30px
    display: flex
    flex-flow: row nowrap

.head
  display: flex
  flex-flow: row nowrap
  justify-content: space-between

.period
  display: flex
  flex-flow: row nowrap
  align-items: center

  color: #A4A4AE
  cursor: pointer

.checkbox-wrapper
  position: relative
  width: 50px
  height: 24px
  margin-left: 10px
  margin-right: 10px

  background: #FFFFFF
  border: 1px solid rgba(0,0,0,0.05)
  box-shadow: inset 0 1px 5px 0 rgba(0,0,0,0.05)
  border-radius: 20px

.checkbox
  display: none

.circle
  position: relative
  left: 0

  display: block
  width: 22px
  height: 22px

  border-radius: 50%
  background: #FFFFFF
  box-shadow: 0 1px 0 0 rgba(0,0,0,0.05), 0 1px 10px 0 rgba(0,0,0,0.05)

  transition: left 0.2s linear

.yearly .circle 
  left: 25px

.period.monthly .monthly,
.period.yearly .yearly
  color: #2C2C30

.card
  overflow: hidden
  display: flex
  flex-flow: column nowrap
  align-items: center
  max-width: 300px
  width: 100%

  background: #FFFFFF
  box-shadow: 0 1px 0 0 rgba(0,0,0,0.05), 0 1px 10px 0 rgba(0,0,0,0.05)
  border-radius: 20px
  border-top-left-radius: 8px

.card-title
  padding-top: 24px
  margin-bottom: 42px

  font-size: 24px
  color: #2C2C30
  text-align: center

.card-cost
  margin-bottom: 24px

  font-size: 60px
  color: #2C2C30
  text-align: center

  span
    font-size: 24px
    color: #A4A4AE

.card-sites
  margin-bottom: 16px
  font-size: 20px
  color: #2C2C30

.card-number
  margin-bottom: 42px
  font-size: 26px
  color: #2C2C30

.card-button
  width: 100%
  padding: 20px 0
  font-size: 16px
  color: #FFFFFF
  text-align: center

  cursor: pointer

.downgrade
  background: #A4A4AE

.upgrade
  background: #8B5FBF

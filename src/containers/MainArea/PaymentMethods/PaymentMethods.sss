.content
  width: 100%
  margin-top: 30px
  display: flex
  flex-flow: row nowrap
  justify-content: space-between

  .side
    flex: 0 0 270px
    padding-right: 40px

    .method
      display: flex
      flex-flow: row nowrap
      justify-content: space-between
      align-items: center

      padding-bottom: 10px
      padding-top: 10px
      padding-right: 11px
      margin-bottom: 10px
      border-radius: 20px

      background: #FFFFFF
      box-shadow: 0 1px 0 0 rgba(0,0,0,0.05), 0 1px 10px 0 rgba(0,0,0,0.05)
      cursor: pointer


      &-checked
        background: #eeeeee

      .name
        font-size: 14px
        color: #313133
        line-height: 24px
        padding-left: 15px
        user-select: none

      &-new
        .name
          font-weight: 300


  .main
    flex: 1
    padding-left: 40px

    .payplan-info
      padding-bottom: 20px
      font-size: 13px
      color: #666666

      p
        margin-top: 0px

    .method-content
      color: #666666

      .label
        user-select: none

      .method-name
        font-size: 15px
        color: #666666


.form
  padding-bottom: 20px

  .section
    font-size: 16px
    color: #2C2C30
    margin-bottom: 50px

    &-header
      user-select: none

  .inputs-inline
    display: flex
    max-width: 430px

  .input-wrapper
    max-width: 430px
    margin-top: 15px
    flex-grow: 1

  .input-state
    width: 80px
    margin-left: 15px

  .input-zip
    max-width: 140px
    margin-left: 15px
    flex-grow: 0

  .card-wrapper
    margin-top: 15px
    max-width: 430px
    background: #ffffff
    padding: 10px 10px 10px 15px
    border-radius: 20px
    box-shadow: 0 1px 0 0 rgba(0,0,0,0.05), 0 1px 10px 0 rgba(0,0,0,0.05)

  .error
    margin-top: 10px
    font-size: 14px
    color: #DD5555


.label
  font-size: 16px
  color: #2C2C30
  margin-bottom: 20px

.checkbox-wrapper
  margin-bottom: 50px
  font-size: 13px

.button-wrapper
  margin-top: 40px

.icon-plus
  width: 18px
  height: 18px
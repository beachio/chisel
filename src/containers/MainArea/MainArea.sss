.wrapper
  overflow: hidden
  height: 100vh
  width: 100vw
  transform: translate3d(0, 0, 0)
  
  &-inner
    display: flex
    flex-flow: row nowrap
    height: 100%

    .mainArea
      flex: 1
      overflow-x: hidden
      display: flex
      flex-flow: column nowrap
      align-items: center
      background: #f9f9f9
      transform: translate3d(0, 0, 0)
      padding: 60px 0 60px 0

*
  box-sizing: border-box

body
  -webkit-font-smoothing: antialiased
  font-family: 'Inter UI', sans-serif
  background: #fff

a
  text-decoration: none
  outline: none

fieldset
  border: 0
  margin: 0
  padding: 0

p
  color: inherit


input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance: none
  margin: 0
